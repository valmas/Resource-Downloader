<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">


        <LinearLayout
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/filename"
                android:layout_weight="1"
                android:hint="filename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Download"
                android:onClick="download"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="1"
                android:text="Time"
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/time"
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="openTimePicker"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ToggleButton
                android:id="@+id/monToggle"
                android:layout_width="54dp"
                android:layout_height="40dp"
                android:text="Mon"
                android:textOff="@null"
                android:textOn="@null"
                android:textSize="12dp" />

            <ToggleButton
                android:id="@+id/tueToggle"
                android:layout_width="54dp"
                android:layout_height="40dp"
                android:text="Tue"
                android:textOff="@null"
                android:textOn="@null"
                android:textSize="12dp" />

            <ToggleButton
                android:id="@+id/wedToggle"
                android:layout_width="54dp"
                android:layout_height="40dp"
                android:text="Wed"
                android:textOff="@null"
                android:textOn="@null"
                android:textSize="12dp" />

            <ToggleButton
                android:id="@+id/thuToggle"
                android:layout_width="54dp"
                android:layout_height="40dp"
                android:text="Thu"
                android:textOff="@null"
                android:textOn="@null"
                android:textSize="12dp" />

            <ToggleButton
                android:id="@+id/friToggle"
                android:layout_width="54dp"
                android:layout_height="40dp"
                android:text="Fri"
                android:textOff="@null"
                android:textOn="@null"
                android:textSize="12dp" />

            <ToggleButton
                android:id="@+id/satToggle"
                android:layout_width="54dp"
                android:layout_height="40dp"
                android:text="Sat"
                android:textOff="@null"
                android:textOn="@null"
                android:textSize="12dp" />

            <ToggleButton
                android:id="@+id/sunToggle"
                android:layout_width="54dp"
                android:layout_height="40dp"
                android:text="Sun"
                android:textOff="@null"
                android:textOn="@null"
                android:textSize="12dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="1"
                android:text="Auto Download"
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Switch
                android:id="@+id/enableAutoDownloading"
                android:layout_weight="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="522dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/errorArea"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:scrollbars="vertical" />

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>